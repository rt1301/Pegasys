<script>
  // "use strict";
let map;
function initMap() 
{
// Map options
let nasa = new google.maps.LatLng(38.8831, -77.0163);
map = new google.maps.Map(document.getElementById("map"), 
{
  center: nasa,
  zoom: 9
});

// Info tab
var info = new google.maps.InfoWindow({
content: '<h3>Pegasys</h3>'
});
// Add Marker
var marker = new google.maps.Marker({
position: nasa,
map: map,
title: "Click to zoom",
});
map.addListener("center_changed", () => {
  // 3 seconds after the center of the map has changed, pan back to the
  // marker.
  window.setTimeout(() => {
    map.panTo(marker.getPosition());
  }, 3000);
});
marker.addListener("click", () => {
  map.setZoom(15);
  map.setCenter(marker.getPosition());
  info.open(marker.get('map'),marker);
});
var transitLayer = new google.maps.TransitLayer();
transitLayer.setMap(map);
}
</script>
<script defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAbcEfdbR1O1Z1hbEHwXVC7bF3P_3-RLVc&callback=initMap">
</script>
