tl.from("#explore", 1.3,{yPercent:40, ease:Back.easeInOut});
tl1.from("#mars-mission",1.3,{yPercent:40, ease:Back.easeInOut});
tl2.from("#Carousal",1.3,{yPercent:40, ease:Back.easeInOut});
tl3.from("#facilities",1.3,{yPercent:40, ease:Back.easeInOut});
const ScrollScene1 = new ScrollMagic.Scene({
    triggerElement: "#explore",
    triggerHook: 'onEnter',
}).setTween(tl).addTo(controller);
const ScrollScene2 = new ScrollMagic.Scene({
    triggerElement: "#mars-mission",
    triggerHook: "onEnter",
}).setTween(tl1).addTo(controller);
const ScrollScene3 = new ScrollMagic.Scene({
    triggerElement: "#Carousal",
    triggerHook: "onEnter",
}).setTween(tl2).addTo(controller);
const ScrollScene5 = new ScrollMagic.Scene({
    triggerElement: "#facilities",
    triggerHook: "onEnter",
}).setTween(tl3).addTo(controller);
</script>

